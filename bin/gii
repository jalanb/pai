#! /usr/bin/env python3
"""gii

Usage: gii        [options] [revs] [--] [paths]
   or: gii <      [git command output]

Options:
  +<number>       Select line <number> in the first view
  -v, --version   Show version and exit
  -h, --help      Show help message and exit
"""
from pysyte import args as arguments
from pysyte.bash import git

def parse_args():
    """Parse out command line arguments"""
    p = arguments.parser(__doc__)
    p.sub('log')
    p.sub('show')
    p.sub('blame')
    p.sub('grep')
    p.sub('refs')
    p.sub('stash')
    p.sub('status')
    p.sub('+<number>')
    p.opt('-v', '--version')
    return p.parse_args()


def main():
    """Run the script"""
    args = parse_args()


if __name__ == '__main__':
    arguments.call_main(main)
